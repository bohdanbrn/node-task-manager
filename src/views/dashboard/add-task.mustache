{{> ./template-parts/header}}

{{> ./template-parts/navigation}}

<div class="container">

    <form action="/dashboard/add-task" method="POST">
        <h1 class="mt-4">Create new task</h1>

        {{> ./partials/messages}}

        <div class="form-group">
            <label for="taskTitle" class="col-form-label">Title</label>
            <input type="text" id="taskTitle" class="form-control" name="title" value="{{task.title}}" required>
        </div>
        <div class="form-group">
            <label for="taskDescription">Description</label>
            <textarea id="taskDescription" class="form-control" name="description"
                rows="4">{{task.description}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>

{{> ./template-parts/footer}}
