{{> ./template-parts/header}}

<div class="container">

    <h1 class="mt-4">Task list</h1>
    {{> ./template-parts/messages}}

    <div class="task-list">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Task</th>
                    <th scope="col">Status</th>
                    <th scope="col">Created date</th>
                    <th scope="col">Owner</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#tasks}}
                    <tr class="table-light">
                        <th scope="row">{{title}}</th>
                        <td>{{status}}</td>
                        <td>{{createdAtFormat}}</td>
                        <td>{{owner.name}}</td>
                        <td>
                            <a href="/dashboard/tasks/edit/{{_id}}" class="btn btn-success">Edit</a>
                        </td>
                    </tr>
                {{/tasks}}
            </tbody>
        </table>
    </div>
    
</div>

{{> ./template-parts/footer}}
