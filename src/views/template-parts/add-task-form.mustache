<form method="POST" action="/dashboard/add-task">
    <fieldset>
        <legend>Create new task</legend>

        {{> ./partials/messages}}

        <div class="form-group">
            <label for="taskTitle" class="col-form-label">Title</label>
            <input type="text" id="taskTitle" class="form-control" name="title" value="{{task.title}}" required>
        </div>
        <div class="form-group">
            <label for="taskDescription">Description</label>
            <textarea id="taskDescription" class="form-control" name="description" rows="3">{{task.description}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>